Connection con1;
         PreparedStatement insert;
private void table_update()
{
int c1;
try{
        Class.forName("com.mysql.cj.jdbc.Driver");
con1=DriverManager.getConnection("jdbc:mysql://localhost/xoxodb","root","");
insert=con1.prepareStatement("select*from wallpaperlist");
ResultSet rs= insert.executeQuery();
ResultSetMetaData Rss= rs.getMetaData();
c1= Rss.getColumnCount();

DefaultTableModel Df = (DefaultTableModel)jTable1.getModel();
Df.setRowCount(0);

while(rs.next())
{
Vector v1=new Vector();

for(int a=1;a<=c1;a++)
{
v1.add(rs.getInt("wallid"));
v1.add(rs.getString("wallname"));
v1.add(rs.getString("category"));
}
Df.addRow(v1);
}
        
}       catch (ClassNotFoundException | SQLException ex) {
            Logger.getLogger(ManageCategories.class.getName()).log(Level.SEVERE, null, ex);
        }
}
